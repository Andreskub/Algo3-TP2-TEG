}

Class Jugador{
    -tipoEjercito: Ejercito
    +atacarConA(paisMio: String,paisEnemigo: String)
    +turnoAgregar()
    +turnoAtacar()
}

Class Pais{
    -jugador: Jugador
    -adyacentes: Dictionary
    -actualizarJugador(paisAtacante: Pais)
    +esAdyacente(pais: Pais)
