Class Tablero{
    -buscarPais(pais)
    +atacarConA(jugador: Jugador, paisMio: String, pasiEnemigo: String)
    +agregarFichas(jugador: Jugador, pais: String, num: Integer)
}

Class Continente{
    +ocupadoPorJugador(jugador: Jugador)
